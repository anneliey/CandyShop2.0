@page
@model CandyShop.Pages.CandyProductsModel
@{
}
@section SearchBar {
    <partial name="_searchBar" for="SearchTerm" />
}

<div class="container">
    <div class="row">

        @foreach (var product in Model.CandyProductView.Concat(Model.CandyDbProductView))

        {
            <div class="col-3">
                <a asp-route-id="@product.Id" asp-page="/ProductDetails">
                    <img class="product-thumbnail" src="~/images/@product.ImageUrl" />
                </a>
                <div class="product-body">
                    <p class="all-products-title"> @product.Name</p>
                    <p>I lager: @product.Stock</p>

                </div>
                <div class="add-to-cart-buttom">
                    <a class="btn btn-primary" asp-route-id="@product.Id" asp-page="/Cart">Add to cart</a>
                </div>
            </div>
        }
    </div>
</div>