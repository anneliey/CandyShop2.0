@page
@model CandyShop.Pages.CartModel
@{
}
<body>
    <div class="container py-5 mb5">
        
        <h1 class="mb-5">Information and shipping</h1>
        
    </div>
 
        <div class="row py-4">
            <div class="col-md-5 order-md-2 mb-5">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Dina varor</span>
                    @*//Hur många varor som är i korgen*@

                    <span class="badge badge-primary badge-pill"></span>
                </h4>
                <ul class="list-group mb-4">
                    @foreach (var product in Model.CartView)
                    {
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <a class="btn btn-secondary" asp-route-removeId="@product.Id" asp-page="/Cart">-</a>
                                <a class="btn btn-secondary" asp-route-addId="@product.Id" asp-page="/Cart">+</a>
                            </div>
                            <div>
                                <h6 class="my-0">@product.Name</h6>
                            </div>
                            @*//Pris*@
                            <span class="text-muted">@product.Price kr</span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between">
                        @*//Totala summan*@
                        <span>Total @CartModel.totalSum kr (inkl. Moms)</span>
                        <strong></strong>
                    </li>
                    <button onclick="location.href = 'https://localhost:5001/AllProducts';" id="myButton" class="btn btn-secondary">Forsätt shoppa</button>
                </ul>
            </div>
            <div class="col-md-6 order-md-1">
                <h4 class="mb-3">Billing address</h4>
                <form class="needs-validation" method="Post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName">Name</label>
                            <input type="text" asp-for="@Model.Name" class="form-control" id="firstName" placeholder="" value="" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email">Email </label>
                        <input type="email" asp-for="@Model.Email" class="form-control" id="email" placeholder="">
                        <div class="invalid-feedback">
                            Please enter a valid email address for shipping updates.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="number">Phone Number</label>
                        <input type="number" asp-for="@Model.Number" class="form-control" id="number" placeholder="">
                        <div class="invalid-feedback">
                            Please enter a valid phone number.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="address">Address</label>
                        <input type="text" asp-for="@Model.Adress " class="form-control" id="address" placeholder="" required>
                        <div class="invalid-feedback">
                            Please enter your shipping address.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="city">City</label>
                        <input type="text" asp-for="@Model.City" class="form-control" id="city" placeholder="" required>
                        <div class="invalid-feedback">
                            Please enter your shipping address.
                        </div>
                    </div>

                    <h4 class="mb-3">Shipping</h4>
                    <div class="d-block my-3">
                        <div class="custom-control custom-radio">
                            <input asp-for="@Model.ShippingOption" name="ShippingOption" id="opt1" value="PostNord" type="radio"
                                   class="custom-control-input" required>
                            <label class="custom-control-label" for="opt1">PostNord (39 SEK)</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input asp-for="@Model.ShippingOption" name="ShippingOption" id="opt2" value="DHL" type="radio"
                                   class="custom-control-input" required>
                            <label class="custom-control-label" for="opt2">DHL (99 SEK)</label>
                        </div>
                    </div>

                    <h4 class="mb-3">Payment</h4>
                    <div class="d-block my-3">
                        
                        <div class="custom-control custom-radio">
                            <input asp-for="@Model.PaymentOption" name="PaymentMethod" id="debit" value="debit" type="radio"
                                   class="custom-control-input" required>
                            <label class="custom-control-label" for="debit">Debit card</label>
                            
                        </div>
                        <div class="custom-control custom-radio">
                            <input asp-for="@Model.PaymentOption" name="PaymentMethod" id="paypal" value="paypal" type="radio"
                                   class="custom-control-input" required>
                            <label class="custom-control-label" for="paypal">Paypal</label>
                         </div>   

                        <hr class="mb-4">
                        <input class="btn btn-primary btn-lg btn-block" @*asp-page="OrderConfirmation"*@ value="Continue to checkout"type="submit"/>
                    </div>
                </form>
            </div>
        </div>
</body>
